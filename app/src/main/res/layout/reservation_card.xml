<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/reservation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reservation_image"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:src="@drawable/mic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <com.google.android.material.chip.Chip
                android:id="@+id/reservation_status_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting for approval"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/blue" />

            <TextView
                android:id="@+id/reservation_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Microphone"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reservation_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="16 November 2020" />

            <TextView
                android:id="@+id/reservation_asset_qty_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="3 units" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>