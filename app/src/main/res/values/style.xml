<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ClaraTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/gray</item>
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
<!--        <item name="android:textSize">@dimen/textSizePrimary</item>-->
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/gray</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="ReverseClaraTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryLight">@color/white</item>
    </style>
</resources>